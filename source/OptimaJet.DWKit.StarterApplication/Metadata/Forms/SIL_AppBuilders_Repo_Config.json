[
  {
    "key": "workflowbar",
    "data-buildertype": "workflowbar",
    "events": {
      "onCommandClick": {
        "active": true,
        "actions": [
          "workflowExecuteCommand"
        ]
      },
      "onSetStateClick": {
        "active": true,
        "actions": [
          "workflowSetState"
        ]
      }
    },
    "blockSetState": true
  },
  {
    "key": "form_2",
    "data-buildertype": "form",
    "children": [
      {
        "key": "textarea_comment",
        "data-buildertype": "textarea",
        "label": "Comment",
        "fluid": true,
        "rows": "2"
      }
    ]
  },
  {
    "key": "form_1",
    "data-buildertype": "form",
    "children": [
      {
        "key": "header_1",
        "data-buildertype": "header",
        "content": "Repository Configuration",
        "size": "medium"
      },
      {
        "key": "input_repository_location",
        "data-buildertype": "input",
        "label": "Repository Location",
        "fluid": true,
        "onChangeTimeout": 200,
        "readOnly": true
      },
      {
        "key": "message_1",
        "data-buildertype": "message",
        "header": "Instructions",
        "content": "Paste the above \"Repository Location\" into the \"Publishing\" app configuration page."
      }
    ]
  }
]