{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2017",
    "baseUrl": ".",
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "example-app/*": [
        "src/*"
      ],
      "example-app/src/*": [
        "src/*"
      ],
      "@store/*": [
        "src/redux-store/*"
      ],
      "@ui/*": [
        "src/ui/*"
      ],
      "tests/*": [ "tests/*" ],
      "vendor/*": [ "src/vendor/*" ],
      "*": [
        "types/*"
      ]
    }
  },
  "include": [
    "src",
    "types",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]  
}
