{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "baseUrl": ".",
    "allowJs": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["ESNext", "dom"],
    "paths": {
      "@data/*": ["src/data/*"],
      "@data": ["src/data/index.ts"],
      "@api/*": ["src/data/api/*"],
      "@models/*": ["src/data/models/*"],
      "@store/*": ["src/redux-store/*"],
      "@store": ["src/redux-store/index.ts"],
      "@ui/*": ["src/ui/*"],
      "@lib/*": ["src/lib/*"],
      "@translations/*": ["src/translations/*"],
      "@env": ["src/env.ts"],
      "tests/*": [ "tests/*" ],
      "vendor/*": [ "src/vendor/*" ],
      "*": ["types/*"],
      "semantic-ui-react": ["node_modules/semantic-ui-react/index.d.ts"]
    }
  },
  "include": [
    "src",
    "types",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "build",
    "src/vendor",
    "tests/webpack.config.js",
    "tests/karma.conf.js"
  ]
}
