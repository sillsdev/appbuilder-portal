{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2017",
    "baseUrl": ".",
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@store/*": ["src/redux-store/*"],
      "@ui/*": ["src/ui/*"],
      "@lib/*": ["src/lib/*"],
      "@env": ["src/env.ts"],
      "tests/*": [ "tests/*" ],
      "vendor/*": [ "src/vendor/*" ],
      "*": ["types/*"],
      "semantic-ui-react": ["node_modules/semantic-ui-react/index.d.ts"]
    }
  },
  "include": [
    "src",
    "types",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
