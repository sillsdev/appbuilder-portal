{
  "labels": [
    "dependency upgrade"
  ],
  "dependencyDashboard": true,
  "extends": [
    "config:recommended"
  ],
  "automerge": false,
  "enabled": true,
  "ignorePaths": [],
  "packageRules": [
    {
      "groupName": "TypeScript type definitions",
      "matchPackageNames": ["/^@types/"]
    },
    {
      "matchFileNames": ["package.json"],
      "rangeStrategy": "replace",
      "enabled": true,
      "automerge": false
    }
  ],
  "postUpdateOptions": ["npmInstallTwice"]
}